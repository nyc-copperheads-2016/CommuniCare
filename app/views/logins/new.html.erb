<div align="center">
<h1> Register:</h1>
<h3> <%= form_for @login do |f| %>
  <div>

    <div>
     <%= f.label :First_Name %>
     <%= f.text_field :first_name %>
    </div>
    <div>
     <%= f.label :Last_Name %>
     <%= f.text_field :last_name %>
    </div>
    <div>
     <%= f.label :Address %>
     <%= f.text_field :address%>
    </div>
    <div>
     <%= f.label :City %>
     <%= f.text_field :city %>
    </div>

    <div>
      <%= f.label :State %>
     <%= f.select :state, [
      ['Alabama', 'AL'],
