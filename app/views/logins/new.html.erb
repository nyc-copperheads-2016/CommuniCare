    <div>
     <%= f.label :Phone %>
     <%= f.text_field :phone %>
    </div>

    <div>
     <%= f.label :Email %>
     <%= f.text_field :email %>
    </div>
    <div>
      <%= f.label :Type %>
      <%= f.select :loginable_type, [
      ['Primary Caregiver', 'PrimaryCaregiver'],
      ['CommuniHelper','OnCallCaregiver']
    ] %>
    </div>

   <div>
    <%=f.label :password %>
    <%= f.password_field :password %>
   </div>
    <%= f.submit 'Login' %>
  <% end %>
  </div>
</h3>



